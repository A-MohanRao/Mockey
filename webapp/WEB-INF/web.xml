<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
	<display-name>Mockey</display-name>
	<servlet>
		<servlet-name>MockStartUpServlet</servlet-name>
		<servlet-class>com.mockey.web.MockStartUpServlet</servlet-class>
		<init-param>
			<param-name>default.properties</param-name>
			<param-value>WEB-INF/default.properties</param-value>
		</init-param>
		<init-param>
			<param-name>log4j.properties</param-name>
			<param-value>WEB-INF/log4j.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>MockHomeServlet</servlet-name>
		<display-name>MockHomeServlet</display-name>
		<servlet-class>com.mockey.web.MockHomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockServiceExportServlet</servlet-name>
		<display-name>MockServiceExportServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceExportServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockServiceUploadServlet</servlet-name>
		<display-name>MockServiceUploadServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceUploadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockHistoryPerServiceByIpServlet</servlet-name>
		<display-name>MockHistoryPerServiceByIpServlet</display-name>
		<servlet-class>com.mockey.web.MockHistoryPerServiceByIpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockHistoryHtmlServlet</servlet-name>
		<display-name>MockHistoryHtmlServlet</display-name>
		<servlet-class>com.mockey.web.MockHistoryHtmlServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockServiceScenarioListServlet</servlet-name>
		<display-name>MockServiceScenarioListServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceScenarioListServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>MockServiceConfigureServlet</servlet-name>
		<display-name>MockServiceConfigureServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceConfigureServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockServiceSetupServlet</servlet-name>
		<display-name>MockServiceSetupServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceSetupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockResponseServlet</servlet-name>
		<display-name>MockResponseServlet</display-name>
		<servlet-class>com.mockey.web.MockResponseServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MockServiceScenarioServlet</servlet-name>
		<display-name>MockServiceScenarioServlet</display-name>
		<servlet-class>com.mockey.web.MockServiceScenarioServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>MockHistoryPerServiceServlet</servlet-name>
        <display-name>MockHistoryPerServiceServlet</display-name>
        <servlet-class>com.mockey.web.MockHistoryPerServiceServlet</servlet-class>
    </servlet>	
    <servlet>
        <servlet-name>MockServiceProxyInfoServlet</servlet-name>
        <display-name>MockServiceProxyInfoServlet</display-name>
        <servlet-class>com.mockey.web.MockServiceProxyInfoServlet</servlet-class>
    </servlet>  
    <servlet-mapping>
        <servlet-name>MockServiceProxyInfoServlet</servlet-name>
        <url-pattern>/proxy/settings</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockHomeServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockHistoryPerServiceServlet</servlet-name>
		<url-pattern>/history/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>MockHistoryPerServiceByIpServlet</servlet-name>
        <url-pattern>/history/detail</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockHistoryHtmlServlet</servlet-name>
		<url-pattern>/checkforhistory</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockServiceScenarioListServlet</servlet-name>
		<url-pattern>/scenariolist</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockServiceSetupServlet</servlet-name>
		<url-pattern>/setup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockServiceScenarioServlet</servlet-name>
		<url-pattern>/scenario</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockServiceConfigureServlet</servlet-name>
		<url-pattern>/configure</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MockResponseServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
		<servlet-name>MockServiceUploadServlet</servlet-name>
		<url-pattern>/upload/*</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
		<servlet-name>MockServiceExportServlet</servlet-name>
		<url-pattern>/export/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.jws</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
		<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>	
	<taglib>
        <taglib-uri>/mockey</taglib-uri>
        <taglib-location>/WEB-INF/mockey.tld</taglib-location>
    </taglib>
</web-app>
